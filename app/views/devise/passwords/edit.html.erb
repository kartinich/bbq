<div class="col-md-6">
  <h1>Сменить пароль</h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, "Новый пароль:" %>
      <% if @minimum_password_length %>
        <em> (не менее <%= @minimum_password_length %> символов)</em>
      <% end %><br/>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
      <div>&nbsp;</div>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Новый пароль:" %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'Повторите пароль' %>
      <div>&nbsp;</div>
    </div>

    <div class="actions">
      <%= f.submit "Сменить пароль", class: 'btn btn-success btn-lg btn-block' %>
      <div>&nbsp;</div>
    </div>
  <% end %>

<%= render "devise/shared/links" %>
</div>
