<div class="col-md-6">
  <h1>Зарегистрироваться</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource, class: "alert alert-danger", role: "alert" %>

    <div class="form-group">
      <i class="fa fa-envelope"></i>
      <%= f.label 'E-mail:' %><br/>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>

    <div class="form-group">
      <i class="fa fa-lock"></i>
      <%= f.label 'Пароль:' %>
      <% if @minimum_password_length %>
        <em> (не менее <%= @minimum_password_length %> символов)</em>
      <% end %><br/>
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
    </div>

    <div class="form-group">
      <i class="fa fa-lock"></i>
      <%= f.label 'Пароль:' %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'Повторите пароль' %>
    </div>

    <div class="actions">
      <%= f.submit "Зарегистрироваться", class: 'btn btn-success btn-lg btn-block' %>
      <div>&nbsp;</div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
