<h2>Настройки пользователя</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <i class="fa fa-envelope"></i>
    <%= f.label 'E-mail:' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <i class="fa fa-lock"></i>
    <%= f.label 'Пароль:' %> <i>(Если не хотите менять, оставьте поле пустым)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em>(не менее <%= @minimum_password_length %> символов)</em>
    <% end %>
  </div>

  <div class="form-group">
    <i class="fa fa-lock"></i>
    <%= f.label 'Пароль:' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Повторите пароль' %>
  </div>

  <div class="form-group">
    <i class="fa fa-lock"></i>
    <%= f.label 'Текущий пароль:' %> <i>(Введите текущий пароль для подтверждения изменений)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Сохранить", class: 'btn btn-success' %>
  </div>
<% end %>

<h3>Удалить аккаунт</h3>

<p>Действительно?</p>
<%= button_to "Удалить аккаунт", registration_path(resource_name), data: { confirm: "Вы уверены?" }, method: :delete, class: 'btn btn-danger' %>
<div>&nbsp;</div>

<%= link_to "Вернуться", :back %>
